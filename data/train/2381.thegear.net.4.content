		<script type="text/javascript">
		$(document).ready(function(){

			$(".btn_more.main_list").click(function(){
				var page = $(this).attr("data-page");
				var type = $(this).attr("data-type");
				var count = $(this).attr("data-count");
				var category_id = $(this).attr("category_id");

				$.ajax({
		                    type: 'post',
		                    url: '/welcome/paging',
				  dataType: "json",
		                    data : "slug=" + type + '&current_page=' + page + '&count=' + count + '&category_id=' + category_id,
		                    success: function(result) {
		                    	if(result != undefined && result != null)
						{
							if(result.result == 1)
							{
								var html = '';
									
								for(var i=0;i<result.db_data.length;i++)
								{
									if( type == 'main') {
										html += '<li class="card_con">';	
										html += '<div>';	
										html += '<div class="category">';	
										html += '<h3><a href="/'+result.db_data[i]['post_id']+'">'+result.db_data[i]['sub_category_title']+'</a></h3>';	
										html += '<span class="date">'+result.db_data[i]['regist_date']+'</span>';	
										html += '</div>';	
										html += '<div class="thum img" style="background:url('+result.db_data[i]['represent_image']+');">';	
										html += '<a href="/'+result.db_data[i]['post_id']+'"></a>';	
										html += '</div>';	
										html += '<div class="text">';	
										html += '<h4><a href="/'+result.db_data[i]['post_id']+'">'+result.db_data[i]['title']+'</a></h4>';	
										html += '<p>'+result.db_data[i]['single_contents']+'</p>';	
										html += '<div class="share"> ';	
										html += '<a class="sns f_book2" sns_type="fb" post_editor="'+result.db_data[i]['name']+'" post_title="'+result.db_data[i]['title']+'" post_img="'+result.db_data[i]['represent_image']+'" post_id="'+result.db_data[i]['post_id']+'"></a>';	
										html += '<a class="sns twtr" sns_type="tw" post_editor="'+result.db_data[i]['name']+'" post_title="'+result.db_data[i]['title']+'" post_img="'+result.db_data[i]['represent_image']+'" post_id="'+result.db_data[i]['post_id']+'"></a>';	
										html += '</div>';	
										html += '</div>';	
									} else if( type == 'trend') {
										html += '<li class="card_con mb10">';
										html += '<div>';
										html += '<div class="category">';
										html += '<h3><a href="/'+result.db_data[i]['post_id']+'">'+result.db_data[i]['sub_category_title']+'</a></h3>';
										html += '<span class="date">'+result.db_data[i]['regist_date']+'</span>';
										html += '</div>';
										html += '<div class="text_box">';
										html += '<h4><a href="/'+result.db_data[i]['post_id']+'">'+result.db_data[i]['title']+'</a></h4>';
										html += '<a href="/'+result.db_data[i]['post_id']+'">';
										html += '<div class="thum" style="background:url('+result.db_data[i]['represent_image']+')"></div>';
										html += '</a>';
										html += '<div class="list_text">';
										html += '<a href="/'+result.db_data[i]['post_id']+'">';
										html += '<p class="text">'+result.db_data[i]['single_contents']+'</p>';
										html += '</a>';
										html += '</div>';
										html += '</div>';								
									} else {
										html += '<li class="card_con">';	
										html += '<div class="thum_text">';	
										html += '<a class="thum img" style="background:url('+result.db_data[i]['represent_image']+');" href="/'+result.db_data[i]['post_id']+'">';	
										html += '<span>'+result.db_data[i]['title']+'</span>';	
										html += '</a>';	
									}	
										html += '</div>';
										html += '</li>';	
								}

								$('.add_loading.'+type).show();

								setTimeout(function(){
									$('.add_loading.'+type).hide();
									$('.more_posts.'+type).append(html);
									$('.btn_more.'+type).attr('data-page', result.page_data);

									if(result.page_data == result.db_last) {
										$('.list_more.'+type).hide();
									}
								 }, 2000);	

							}	
							else
							{
								console.log('paging fail');	
								console.log(result);
							}
						}		                       
		                    }  
		                });
			});

			$('.sns').click(function(){
				var type = $(this).attr("sns_type");
				var id = $(this).attr("post_id");
				var i = $(this).attr("post_img");
				var t = $(this).attr("post_title");
				var d = $(this).parent().parent().find('p').text();
				var e = $(this).attr("post_editor");
				var u = 'http://thegear.co.kr/'+id;

				$('meta[property="og:title"]').attr("content", t);
				$('meta[property="og:description"]').attr("content", d);
				$('meta[property="og:image"]').attr("content", i);
				$('meta[property="og:url"]').attr("content", u);
				$('meta[name="author"]').attr("content", e);

				$('meta[name="twitter:title"]').attr("content", t);
				$('meta[name="twitter:description"]').attr("content", d);
				$('meta[name="twitter:image"]').attr("content", i);

				if(type == "fb") {
					var sns_url = 'http://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(u)+"&t="+encodeURIComponent(t)+"&i="+encodeURIComponent(i);
					var popup = window.open(sns_url, "facebook", "toolbar=0, status=0, width=626, height=436");
				} else {
					var sns_url = 'http://twitter.com/intent/tweet?text='+encodeURIComponent(t+' - 더기어 ')+"&url="+ encodeURIComponent(u); 
					var popup = window.open(sns_url, "twitter", "toolbar=0, status=0, width=800, height=400");
					if(popup) {
						popup.focus();
					}
				}

				$.ajax({ 
					type : "POST",
					url  : "/sub/share_count", 
					data : "post_id=" + id,
					success:function(count){
					}
				});
			});
		});
