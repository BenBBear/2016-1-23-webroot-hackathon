<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">   
    <!-- 
         'Plain Jane' Mini-Theme running on Easy Pie Maintenance Mode Plugin
         easypiewp.com
    -->
    <head>	
        <title>boso.jp</title>
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Oswald|Droid+Serif"></link>
        <link rel="stylesheet" type="text/css" href="http://boso.jp/wp-content/plugins/easy-pie-maintenance-mode/mini-themes/plain/css/style.css" />
        
        <style type="text/css">
            
        </style>
    </head>
    <body>
        <div id="header">            
            <p>boso.jp</p>            
        </div>

        <div id="content">
            <img id="logo-img" src="" />
            <h1 id="headline">boso.jp</h1>
            <p id="message">under construction</p>
        </div>

        <!-- Removes the image when not defined -->
        <script type="text/javascript">
         
            var image = document.getElementById("logo-img");
         
            function ezp_hideImage() {
                image.style.display = "none";
            }                                                                
                
            if(image.getAttribute('src') == '') {
                        
                ezp_hideImage();
            }
                
            image.addEventListener('error', ezp_hideImage, true);
            
        </script>
    </body>
</html>

