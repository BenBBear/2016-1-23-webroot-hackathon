$(function(){
  $("#philosophy_slideshow > ul").carouFredSel({
    "auto": false,
    "circular": false,
    "infinite": false,
    "next": {
      "button": "#philosophy_slideshow .next a",
      "onBefore": function () {
        fadeSideButton(200);
      }
    },
    "prev": {
      "button": "#philosophy_slideshow .prev a",
      "onBefore": function() {
        fadeSideButton(200);
      }
    },
    "pagination": "#philosophy_slideshow .pagination",
    "items": {
      "visible": false,
      "width": 240,
      "height": 200,
      "start": 0,
      "minimum": 4
    }
  });

  function fadeSideButton(speed) {
    function pred(target) {
      return $("a",$(target)).hasClass("disabled");
    }
    fadeToggle("#philosophy_slideshow .next", pred, speed);
    fadeToggle("#philosophy_slideshow .prev", pred, speed);
  }
  
  function fadeToggle(target, predicate, speed) {
    if ( predicate(target) ) {
      $(target).fadeOut(speed);
    }
    else {
      $(target).fadeIn(speed);
    }
  }

  function hitLeftSide($target, e) {
    var $eventTarget = $(e.currentTarget);
    var left = $eventTarget.offset().left;
    if ( e.pageX < left - 80 ) return false;
    if ( e.pageX > left + 80 ) return false;
    return true;
  }

  function hitRightSide($target, e) {
    var $eventTarget = $(e.currentTarget);
    var right = $eventTarget.offset().left + $eventTarget.width();
    if( e.pageX < right - 80 ) return false;
    if( e.pageX > right + 80 ) return false;
    return true;
  }

  fadeSideButton(0);
  $("#philosophy_slideshow ul li:last").removeClass("last");


  // 2013/05/09 added by t.

  function insert_br(str,cut){
    var cutFigure = cut>0 ? cut : '43'; // カットする文字数

    var textLength = str.length;

    var res = '';
    for(var i=0;i<textLength;i=i+cutFigure) {
      res = res + str.substr(i,cutFigure);
      if(i+cutFigure < textLength) {
        res = res + '<br />';
      }
    }
    return res;
  }

  $.ajax({
    url: '/feed.php',
    dataType: 'xml',
    success: function(data) {
      $("entry", data).each(function(i) {
        if(i<5) {
          var date = moment($("published",this).text());
          var title = $("title",this).text();
          var raw = $("summary",this).text();
          var img_tag = /(<img.+src=[\'"]([^\'"]+)[\'"].*>)/i;
          var img = raw.match(img_tag);
          var thumbnail = img != null ? img[1] : '<img src="/img/information/online_icon.png" alt="announce" width="65" height="65" />';
          var summary = insert_br(raw.replace(/<\/?[^>]+>/gi, ""));
          var queryString = $("id", this).text().split("?")[1];
          $("#info"+(i+1)+" .date").html('<a href="/information?'+queryString+'">'+date.year()+'　'+(date.month()+1)+'/'+date.date()+'</a>');
          $("#info"+(i+1)+" .thumbnail").html('<a href="/information?'+queryString+'">'+thumbnail+'</a>');
          $("#info"+(i+1)+" .title").html('<a href="/information?'+queryString+'">'+title+'</a>');
          $("#info"+(i+1)+" .summary").html('<a href="/information?'+queryString+'">'+summary+'</a>');
        }
      });
    },
    error: function(obj, status, mess) {
      alert(status);
    }
  });

});



$(function(){
  function seq(start, count) {
    var ret = [];
    for (var i = 0; i < count; i++) {
      ret.push(start + i);
    }
    return ret;
  }
	var set_event = function(year, date, slide_num, excludes) {
		var dir = '/img/home/slide/'+year+'/'+date+'/';
		var data = [];
		var zero_padding = function(num) {
			if(num<10) {
				num = '0'+num;
			}
			return num;
		}
		excludes = excludes||[];

    if(typeof(slide_num) == "number") {
  		var tmp = [];

      for(var i=1; i<=slide_num;i++) {
        tmp.push(i);
      }
      slide_num = tmp;
    }
    $(slide_num).each(function(index, item){
      if (excludes.indexOf(item) != -1) {
        return;
      }
      if(index==slide_num.length-1) {
        data.push({src:"ss_"+zero_padding(item)+".jpg",duration:8.0*1000});
      } else {
        data.push({src:"ss_"+zero_padding(item)+".jpg"});
      }
    });

		var source = '';
		$(data).each(function(index, item){
			var duration = '';
			if ( item.duration ) {
				duration = ' data-duration="'+item.duration+'"';
			}
			var tag = '<img src="'+ dir + item.src + '"' + duration + ' />';
			if ( item.url ) {
				tag = '<a href="' + item.url + '" >' + tag + '</a>';
			}
			source += tag;
		});

		$('#slideshow').html(source).slideShow("img",{loop:true,change:1000});
	}
  // アーカイブのリンクがクリックされるとスライドショー部分を別のアーカイブに切り替える
  $('.years .set').each(function(){
    var $set = $(this);
    $set.find(".list a").on('click', function() {
      var $anchor = $(this);
      var length = parseInt($anchor.data('length'), 10);
      set_event($set.find('.year').text(), $anchor.data('name'), length);
    })
  })

  $("#y2014 .d0907").off("click").click(function() {
    var indexes = seq(1,33);
    indexes.splice(18, 2); // 19,20を削除
    indexes.splice(4, 0, 20); // 20を挿入
    set_event("2014", "0907", indexes);
    return false;
  });
  // 最後の要素（最近追加されたスライド）を自動的に再生する
	$(".years .set .item:last a").trigger("click");
});
</script>
