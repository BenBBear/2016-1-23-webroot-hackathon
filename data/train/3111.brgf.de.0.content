<script>
if(Modernizr.video.webm || Modernizr.video.h264 || Modernizr.video.ogg) {
document.getElementById("videodiv").style.display = "inline-block;";
} else {
document.getElementById("videodiv").style.display = "none;";
}

var html5video = !!document.createElement('video').canPlayType;
var crap = /iphone|ipod|eve-igb/.test(window.navigator.userAgent.toLowerCase());
if (html5video != true || crap) {
document.location = "https://brgf.de/phpbb3";
}


var vid = document.getElementById('intro');

window.addEventListener('touchstart', function videoStart() {
  vid.play();
  console.log('first touch');
  // remove from the window and call the function we are removing
  this.removeEventListener('touchstart', videoStart);
});

var kb = document.getElementById("fw-kb");
var forum = document.getElementById("fw-forum");
var blog = document.getElementById("fw-blog");

var mp4Vid = document.getElementById('mp4');
var webmVid = document.getElementById('webm');
var oggVid = document.getElementById('ogg');

function warp() {
$(mp4Vid).attr('src', "/intro/warp.mp4");
$(webmVid).attr('src', "/intro/warp.webm");
$(oggVid).attr('src', "/intro/warp.ogg");
$(vid).prop("loop", false);
vid.load();
vid.pause();
vid.play();
}

function killboard() {
if (vid.paused) {
document.location = "https://brgf.de/kb";
}
else {
warp();
vid.addEventListener('ended', function(){
document.location = "https://brgf.de/kb";
});
setTimeout("location.href = 'https://brgf.de/kb';",6000);
}
}

function mainsite() {
if (vid.paused) {
document.location = "https://brgf.de/blog";
}
else {
warp();
vid.addEventListener('ended', function(){
document.location = "https://brgf.de/blog";
});
setTimeout("location.href = 'https://brgf.de/blog';",6000);
}
}

function phpbb() {
if (vid.paused) {
document.location = "https://brgf.de/phpbb3";
}
else {
warp();
vid.addEventListener('ended', function(){
document.location = "https://brgf.de/phpbb3";
});
setTimeout("location.href = 'https://brgf.de/phpbb3';",6000);
}
}

kb.addEventListener("click", killboard);
blog.addEventListener("click", mainsite);
forum.addEventListener("click", phpbb);
</script>
